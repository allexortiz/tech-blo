<div class="text-center">
  <h2 id="current-post" data-id="{{id}}">{{title}}</h2>
  <p>{{description}}</p>
  <p>Created by {{user.username}} on {{format_date date_created}}</p>
  <div>
    {{#if comments.length}}
    <div class="col-md-6 blog-list">
      <h3>Comments:</h3>

      {{#each comments as |comment|}}
      <p>
        {{comment.comment_text}}
      </p>
      {{!-- <div class="row mb-2">
        <div class="col-md-8">
          <h4><a href="/post/{{post.id}}">{{post.title}}</a></h4>
        </div>
        <div class="col-md-4">
          <button class="btn btn-sm btn-danger" data-id="{{post.id}}">DELETE</button>
        </div>
      </div> --}}
      {{/each}}
    </div>
    {{/if}}

  </div>
  <div>
    <form class="form new-blog-form">
      <div class="form-group">
        <label for="blog-name">Blog Name:</label>
        <input class="form-input" type="text" id="blog-name" name="blog-name" />
      </div>
      <div class="form-group">
        <label for="blog-desc">Description:</label>
        <textarea class="form-input" id="blog-desc" name="blog-desc"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Create</button>
      </div>
    </form>
    <p>
      <button class="btn btn-primary">Add Comment!</button> /// COME BACK TO THIS TO MAKE A LEAVE A COMMENT BUTTON
    </p>
  </div>
</div>