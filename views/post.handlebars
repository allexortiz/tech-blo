<div class="container">
  <h2>{{title}}</h2>
  <p>{{description}}</p>

  <!-- Comments Section -->
  <div class="comments-section">
    <h3>Comments</h3>

    <!-- Loop through comments and display each one -->
    {{#each comments}}
    <div class="comment">
      <p>{{this.comment_text}}</p>
      <p>Comment by: {{this.User.username}}</p>
      <!-- Add additional information or styling as needed -->
    </div>
    {{/each}}

    <!-- Form for adding a new comment -->
    <form class="form new-comment-form" method="POST" action="/api/posts/{{id}}/comment">
      <div class="form-group">
        <label for="comment-text">Add a Comment:</label>
        <textarea class="form-input" id="comment-text" name="comment_text"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Add Comment</button>
      </div>
    </form>
  </div>

  <a href="/profile">Back to Profile</a>
</div>

<script src="./js/profile.js"></script>