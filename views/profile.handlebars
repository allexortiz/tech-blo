<div class="row">
    <div class="col-auto">
        <h2>Welcome, {{username}}!</h2>
    </div>
</div>

<div class="row mt-4">
    <div class="col-md-6">
        <h3>Post a New Blog!</h3>

        <form class="form new-blog-form">
            <div class="form-group">
                <label for="blog-name">Blog Name:</label>
                <input class="form-input" type="text" id="blog-name" name="blog-name" />
            </div>
            <div class="form-group">
                <label for="blog-desc">Description:</label>
                <textarea class="form-input" id="blog-desc" name="blog-desc"></textarea>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Create</button>
            </div>
        </form>
    </div>

    {{#if projects.length}}
    <div class="col-md-6 blog-list">
        <h3>Current Blogs:</h3>

        {{#each projects as |project|}}
        <div class="row mb-2">
            <div class="col-md-8">
                <h4><a href="/blog/{{project.id}}">{{project.name}}</a></h4>
            </div>
            <div class="col-md-4">
                <button class="btn btn-sm btn-danger" data-id="{{project.id}}">DELETE</button>
            </div>
        </div>
        {{/each}}
    </div>
    {{/if}}
</div>

<script src="./js/profile.js"></script>