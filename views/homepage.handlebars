<!-- Loop over each object in the blogs array -->
{{#each posts as |post| }}
<div class="row mb-4 blog">
  <div class="col-md-5">
    <h2>
      <a href="/post/{{post.title}}">{{post.title}}</a>
    </h2>
    <p>created by {{post.user.username}} on {{format_date post.date_created}}</p>
  </div>
  <div class="col-md-7">
    <p>
      {{post.description}}
    </p>
  </div>
</div>
{{/each}}